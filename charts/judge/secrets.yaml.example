# Example secrets file - Copy to secrets.yaml and fill in actual values
# DO NOT commit secrets.yaml to version control
# Deploy with: helm install judge . -f values.yaml -f secrets.yaml

global:
  # Secrets management
  secrets:
    database:
      # URL-encode your database password
      # Example: password "my!pass" becomes "my%21pass"
      passwordEncoded: "YOUR_URL_ENCODED_DB_PASSWORD"

  # OIDC Authentication - Provider Credentials
  oidc:
    providers:
      - id: github
        # GitHub OAuth App client secret
        client_secret: YOUR_GITHUB_OAUTH_CLIENT_SECRET
